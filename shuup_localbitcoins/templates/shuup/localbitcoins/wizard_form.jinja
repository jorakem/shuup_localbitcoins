{% from "shuup/admin/service_providers/wizard_macros.jinja" import service_provider_section %}

{% call service_provider_section(
    identifier=form_def.name,
    header="Localbitcoins",
    description=gettext("Accept bitcoins using <a target='_blank' href='%(url)s'>Localbitcoins</a>", url="https://localbitcoins.com/")
)%}
    {% set form = pane.forms[form_def.name] %}
    <input type="hidden" name="{{ form.name.html_name }}" value="Stripe">
    {{ bs3.field(form.secret_key) }}
    {{ bs3.field(form.publishable_key) }}
    <p class="text-center">
        {% trans %} Get your {% endtrans %} <a target="_blank" href='https://localbitcoins.com/accounts/api'> {% trans %} API key and secret.{% endtrans %} </a> {% trans %} Required scope for the key is 'Read.' {% endtrans %}
    </p>
    <p class="text-center">
        {% trans %}Don't have an account?{% endtrans %} <a target="_blank" href='https://localbitcoins.com/register/'>{% trans %}Register now{% endtrans %}</a>.
    </p>
{% endcall %}